<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cell_section_gray"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/nagation_relative_ad_setting"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/aa_nagation10" >

        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/af_back15"
            android:onClick="backAction" />

        <TextView
            android:id="@+id/device_nagation_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/nagation_title_26"
            android:textColor="@color/sys_green_color"
            android:textSize="@dimen/sys_font_navigation" />
    </RelativeLayout>

    <TextView
        android:id="@+id/ad_setting_password_txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="15dp"
        android:paddingTop="30dp"
        android:text="@string/text_string_27"
        android:textColor="@color/sys_green_color"
        android:textSize="@dimen/sys_font_navigation" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/clearn_color"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/ad_setting_pass_edittext_1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/bg_password_editetxt"
            android:gravity="center"
            android:inputType="numberPassword"
            android:maxLength="1"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/ad_setting_pass_edittext_2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/bg_password_editetxt"
            android:gravity="center"
            android:inputType="numberPassword"
            android:maxLength="1"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/ad_setting_pass_edittext_3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/bg_password_editetxt"
            android:gravity="center"
            android:inputType="numberPassword"
            android:maxLength="1"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/ad_setting_pass_edittext_4"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:background="@drawable/bg_password_editetxt"
            android:gravity="center"
            android:inputType="numberPassword"
            android:maxLength="1"
            android:textSize="25sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/ad_setting_password_txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:textColor="@color/sys_green_color"
        android:textSize="@dimen/sys_font_navigation"
        android:visibility="gone" />

</LinearLayout>