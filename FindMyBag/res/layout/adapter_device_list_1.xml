<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@drawable/selector_device_list3"
    android:orientation="horizontal" 
        android:descendantFocusability="blocksDescendants"
    
    >

    <ImageView
        android:id="@+id/device_list_image1"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/ag_cellimage16" />

    <LinearLayout
        
        android:id="@+id/device_linear"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/device_list_image1"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingTop="10dp" >

        <TextView
            
            android:id="@+id/device_list_textview2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="iTag"
            android:textColor="#000000"
            android:textSize="22sp" />

        <TextView
             android:id="@+id/device_list_textview3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="未连接aaaaaa"
            android:textColor="@color/sys_gray_color"
            android:textSize="14sp" />
    </LinearLayout>
    
    
    <Button 
        
        android:id="@+id/device_list_button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="@string/text_string_34"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/device_list_image5"
        android:layout_centerVertical="true"
        android:background="@drawable/device_shape_button1"
        />

    <ImageView
        android:id="@+id/device_list_image5"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:src="@drawable/ad_arr13" />

   

</RelativeLayout>